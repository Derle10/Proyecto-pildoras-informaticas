
public class Array_2d {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		double acomulado;
		double interes = 0.10;
		
		double matrix[][] = new double[6][5];
		
		for (int f=0; f<6; f++){
			
			matrix[f][0] = 10000;
			acomulado=10000;
			
			for (int c=1; c<5; c++){
				acomulado = acomulado+(acomulado*interes);
				matrix[f][c] = acomulado;			
				
			}
			
			interes = interes + 0.1;		
			
		}
		
		for (int x=0; x<6; x++){
		
			System.out.println();
			
			for (int y=1; y<5; y++){
				System.out.printf("1.2f", matrix[x][y]);
				System.out.println(" ");
				
			}	
			
		}
		
		

	}

}
